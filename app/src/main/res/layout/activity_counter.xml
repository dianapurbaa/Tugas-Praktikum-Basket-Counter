<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CounterActivity">

    <Button
        android:id="@+id/btn_score_one_tim_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="SATU POINT"
        android:onClick="counter"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/btn_score_two_tim_a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_score_two_tim_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:onClick="counter"
        android:text="DUA POINT"
        app:layout_constraintStart_toEndOf="@id/btn_score_one_tim_a"
        app:layout_constraintEnd_toStartOf="@id/btn_score_three_tim_a"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_score_three_tim_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="TIGA POINT"
        android:onClick="counter"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/btn_score_two_tim_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_name_tim_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_score_two_tim_a"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Name Tim A"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tv_score_tim_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name_tim_a"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="0"
        android:textSize="54sp"/>

    <Button
        android:id="@+id/btn_reset_score_tim_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_score_tim_a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Reset Score Tim A"
        android:onClick="resetA"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>

    <Button
        android:id="@+id/btn_reset_score_tim_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_score_tim_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Reset Score Tim B"
        android:onClick="resetB"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>

    <TextView
        android:id="@+id/tv_score_tim_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_name_tim_b"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="0"
        android:textSize="54sp"/>

    <TextView
        android:id="@+id/tv_name_tim_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_score_two_tim_b"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Name Tim B"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btn_score_one_tim_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="SATU POINT"
        android:onClick="counter"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/btn_score_two_tim_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_score_two_tim_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="DUA POINT"
        android:onClick="counter"
        app:layout_constraintStart_toEndOf="@id/btn_score_one_tim_b"
        app:layout_constraintEnd_toStartOf="@id/btn_score_three_tim_b"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_score_three_tim_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="TIGA POINT"
        android:onClick="counter"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/btn_score_two_tim_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>